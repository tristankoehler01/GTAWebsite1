@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@model FormModel
@using Newtonsoft.Json;
@using System.Linq;
@{
}

<div id="form1" class="row">
    <div class="col-lg-9 mx-auto rounded border p-3">
        <h2 class="text-center mb-5"> Application Form</h2>

        <form enctype="multipart/form-data" method="post">
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">First Name</label>
                <div class="col-sm-5">
                    <input class="form-control" asp-for="Form.FirstName">
                    <span asp-validation-for="Form.FirstName" class="text-danger"></span>
                    <span class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Last Name</label>
                <div class="col-sm-5">
                    <input class="form-control" asp-for="Form.LastName">
                    <span asp-validation-for="Form.LastName" class="text-danger"></span>
                    <span class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-5">
                    <input class="form-control" asp-for="Form.Email">
                    <span asp-validation-for="Form.Email" class="text-danger"></span>
                    <span class="text-danger"></span>

                </div>

            </div>
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Phone</label>
                <div class="col-sm-5">
                    <input class="form-control" asp-for="Form.Phone">
                    <span asp-validation-for="Form.Phone" class="text-danger"></span>
                    <span class="text-danger"></span>

                </div>

            </div>
             
            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">GTA Certified (<a href="https://catalog.umkc.edu/general-graduate-academic-regulations-information/international-graduate-student-academic-regulations/">Check here for more information</a>)?</label>
                <div class="col-sm-5">
                     <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="Form.GtaCertified">
                        <label class="form-check-label" for="Form.GtaCertified">Yes, I am GTA certified.</label>
                    </div>
                </div>
            </div>

            <div class="row mb-3">
                <label class="col-sm-2 col-form-label">Attachment</label>
                <div class="col-sm-5">
                    <input name="postedFile" type="file" accept="application/pdf, application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document" required>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4" col-sm-8>
                    <input class="button" type="submit" value="Upload" asp-page-handler="UploadFile"> 
                </div>
            </div>
        </form>

    </div>

</div>

<script>
    var convert = localStorage.getItem("object");
    var course = JSON.parse(convert);
</script>