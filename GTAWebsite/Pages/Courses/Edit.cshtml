@page
@model GTAWebsite.Pages.Courses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Course Name</br>
                <input asp-for="Course.courseName" class="form-control" />
                <span asp-validation-for="Course.courseName" class="text-danger"></span>
            </div>
            <div class="form-group">
                Course Description</br>
                <input asp-for="Course.courseDescription" class="form-control" />
                <span asp-validation-for="Course.courseDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                Position</br>
                <input type="radio" asp-for="Course.positionName" value="Grader"/> Grader</br>
                <input type="radio" asp-for="Course.positionName" value="Graduate Teaching Assistant"/> Graduate Teaching Assistant</br>
                <input type="radio" asp-for="Course.positionName" value="Lab Instructor"/> Lab Instructor</br>
                <span asp-validation-for="Course.positionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
