@page
@model GTAWebsite.Pages.Applications.ApplicationIndexModel

@{
    ViewData["Title"] = "ApplicationIndex";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Applications</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FormApplication[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormApplication[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormApplication[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormApplication[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormApplication[0].StudentID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormApplication[0].Grade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FormApplication[0].GtaCertified)
            </th>
            <th>@foreach(var file in Model.Files)
                {
                    @foreach (var app in Model.FormApplication)
                    {
                        if (file.FormID == app.Id)
                        {
                            <a asp-page-handler="Download" asp-route-fileId="@file.Id">Download</a>
                        }
                    }
                }
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.FormApplication) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Grade)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GtaCertified)
            </td>
            <td>
                <a asp-page="./ApplicationDelete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
