
@page
@model IndexModel
@{
    ViewData["Title"] = "UMKC: Apply for Graduate Teaching";
}

<style>
    .group-block {
        display:flex;
        background-color:#005293;
        margin:10px;
        align-items:center;
        justify-content:center;
        text-align:center;
        width:200px;
        height:200px;
        flex-direction:column
    }
</style>

<form method="post">
    <div class="form-group">
        <label for="position">Position:</label>
        <select class="form-control" id="position" name="Position">
            @foreach (var value in Enum.GetValues(typeof(Models.Manu.Position)))
            {
                <option value="@value">@value</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="qualification">Qualification:</label>
        <select class="form-control" id="qualification" name="Qualification">
            @foreach (var value in Enum.GetValues(typeof(Models.Manu.Qualification)))
            {
                <option value="@value">@value</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="graderCourses">Grader Courses:</label>
        <select class="form-control" id="graderCourses" name="GraderCourses">
            @foreach (var value in Enum.GetValues(typeof(Models.Manu.GraderCourses)))
            {
                <option value="@value">@value</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="labCourses">Lab Courses:</label>
        <select class="form-control" id="labCourses" name="LabCourses">
            @foreach (var value in Enum.GetValues(typeof(Models.Manu.LabCourses)))
            {
                <option value="@value">@value</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>


<div class="text-center">
    @for (int i = 0; i < Model.Course.Count; i++)
    {
        <div class="group-block" style="float:left; color:white"]>
            <div>@Html.DisplayFor(modelItem => Model.Course[i].courseName)</div>
            <button type = "submit" class="btn btn-primary" style="align-items:center">More</button>
        </div>
    }
</div>
